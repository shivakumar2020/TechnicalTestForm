pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/shivakumar2020/TechnicalTestForm.git'
            }
        }
        stage('Build') {
            steps {
                bat 'mvn clean compile'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'mvn test'
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: 'reports/AutomatonReport.html', allowEmptyArchive: true
            junit 'target/surefire-reports/*.xml'
        }
    }
}
